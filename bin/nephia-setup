#!perl

use strict;
use warnings;
use Nephia::Setup;
use File::Spec;
use Getopt::Long;

my $flavor = 'Default';

my $config = do File::Spec->catfile($ENV{HOME}, '.nephia-setup');
if (defined $config) {
    $flavor = join ',', @{$config->{flavor}};
}

GetOptions(
    "flavor=s" => \$flavor,
    "v|version"  => \&version,
);

my $appname = shift @ARGV || '';
help() unless $appname =~ /^\w+/;

my @flavors = $flavor =~ /,/ ? split(/,/, $flavor) : ( $flavor );

my $setup = Nephia::Setup->new(
    flavor => [@flavors],
    appname => $appname,
);
$setup->create;

sub help {
    print <<EOF;
Usage:

to create new application,

  nephia-setup AppName [--flavor Flavor::Name]

show Nephia version,

  nephia-setup --version

EOF
    exit;
}

sub version {
    print 'Nephia ' . Nephia::Setup->get_version() . "\n";
    exit;
}
